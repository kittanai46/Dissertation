<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main</title>
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        
    <link rel="stylesheet" href="/css/Main.css">
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a href="/">TRACKING</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a href="/classroom" class="sidebar-link">
                        <i class="lni lni-network"></i>
                        <span>Classroom</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/calculate" class="sidebar-link">
                        <i class="lni lni-calculator"></i>
                        <span>Calculate</span>
                    </a>
                </li>                
                <li class="sidebar-item">
                    <a href="/graph" class="sidebar-link">
                        <i class="lni lni-graph"></i>
                        <span>Graph</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                        data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-folder"></i>
                        <span>Document</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Sick leave form</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Leave of absence request</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="/notification" class="sidebar-link">
                        <i class="lni lni-popup"></i>
                        <span>Notification</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="/logout" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            <div class="text-center">
                <h1>
                    ห้องเรียน
                    <% 
                // จัดกลุ่มวิชาตามปี
                const coursesByYear = {};
                subjects.forEach(course => {
                    if (!coursesByYear[course.year]) {
                        coursesByYear[course.year] = [];
                    }
                    coursesByYear[course.year].push(course);
                });

                // เรียงลำดับปีจากมากไปน้อย
                const sortedYears = Object.keys(coursesByYear).sort((a, b) => b - a);
                %>

                <% sortedYears.forEach(year => { %>
                    <div class="year-section mb-4">
                        <h2>ชั้นปีที่ <%= year %></h2>
                        <div class="row justify-content-center">
                            <% coursesByYear[year].forEach(course => { %>
                                <div class="col-md-4 text-center border rounded-lg p-3 info-box mb-3">
                                    <button class="btn btn-outline-primary w-100 p-3" onclick="window.location.href='/students/<%= course.course_code %>/<%= course.section %>'">
                                        <p>วิชา: <%= course.name %></p>
                                        <p>Section: <%= course.section %></p>
                                    </button>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>                                                            
                </h1>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="Sidebar.js"></script>
</body>
</html>
